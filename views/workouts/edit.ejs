<%- include('../partials/header') %>

<h2>Edit Workout</h2>
<form action="/workouts/<%= workout._id %>?_method=PUT" method="post">
    <p> <label for="workout"> Exercise </label>
        <select name="exercise" id="exercise">
            <option <%= workout.exercise === 'Run'?'selected' : '' %> value="Run">Run</option>
            <option <%= workout.exercise === 'Push-Up'?'selected' : '' %> value="Push-Up">Push-Up</option>
            <option <%= workout.exercise === 'Pull-Up'?'selected' : '' %> value="Pull-Up">Pull-Up</option>
            <option <%= workout.exercise === 'Plank'?'selected' : '' %> value="Plank">Plank</option>
            <option <%= workout.exercise === 'Sit-Up'?'selected' : '' %> value="Sit-Up">Sit-up</option>
            <option <%= workout.exercise === 'Squat'?'selected' : '' %> value="Squat">Squat</option>
            <option <%= workout.exercise === 'Bike'?'selected' : '' %> value="Bike">Bike</option>
            <option <%= workout.exercise === 'Swim'?'selected' : '' %> value="Swim">Swim</option>
            <option <%= workout.exercise === 'Snowboard'?'selected' : '' %> value="Snowboard">Snowboard</option>
            <option <%= workout.exercise === 'Rock-Climb'?'selected' : '' %> value="Rock-Climb">Rock-Climb</option>
            <option <%= workout.exercise === 'Yoga'?'selected' : '' %> value="Yoga">Yoga</option>
            <option <%= workout.exercise === 'Table-Tennis'?'selected' : '' %> value="Table-Tennis">Table-Tennis</option>
            <option <%= workout.exercise === 'Sauna'?'selected' : '' %> value="Sauna">Sauna</option>
        </select>
    </p>
    <p>
        <label for="reps"> Reps</label>
        <input type="number" name="reps" value="<%= workout.reps %>" required min="1" max="100">
    </p>
    <p>
        <label for="sets">Sets</label>
        <input type="number" name="sets" value="<%= workout.sets %>" required min="1" max="10">
    </p>
    <p>
        <label for="time">Time</label>
        <input type="number" id="time" value="<%= workout.time %>" name="time" min="1">
    </p>
    <p>
        <label for="date">Date</label>
        <input type="date" name="date" value="<%= workout.date ? workout.date.toISOString().split('T')[0] : '' %>"  id="date">
    </p>
    <p>
        <button type="submit">Update</button>
    </p>

</form>

<%- include('../partials/footer') %>