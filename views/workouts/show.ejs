<%- include('../partials/header') %>


    <h2>Workout</h1>
        <p>Exercise <%= workout.exercise %></p>
        <p>Reps <%= workout.reps %></p>
        <p>Sets <%= workout.sets %></p>
        <p>Time <%= workout.time %></p>
        <p>Date <%= workout.date.toLocaleString('en-US', { year: 'numeric' , month: 'numeric' , day: 'numeric' }) %></p>

    <h3>Notes</h3>
        <% if (workout.notes) { %>
        <% workout.notes.forEach(function(note) { %>
                <%= note.content %>
            <form action="/workouts/<%= workout._id %>/deleteNote/<%= note._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit" style="background:none; border:none; cursor:pointer; "><span class="material-symbols-outlined">delete</span></button>
            </form>
            <% }) %>
            <% } else { %>
                <p></p>
                <% } %>
                <form action="/workouts/<%= workout._id %>/addNote" method="post">
                    <label for="note"></label>
                    <textarea name="content" id="note" rows="5" cols="30"></textarea>
                    <p><button type="submit">Add Note</button></p>
                </form>
        

            <a href="/workouts/<%= workout.id %>/edit">Edit Workout</a>

<%- include('../partials/footer') %>