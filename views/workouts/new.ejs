<%- include('../partials/header') %>

    <h2>Add a New Workout</h2>
    <form action="/workouts" method="post">
        <p> <label for="workout"> Exercise </label>
            <select name="exercise" id="exercise">
                <option value="Run">Run</option>
                <option value="Push-Up">Push-Up</option>
                <option value="Pull-Up">Pull-Up</option>
                <option value="Plank">Plank</option>
                <option value="Sit-Up">Sit-up</option>
                <option value="Squat">Squat</option>
                <option value="Bike">Bike</option>
                <option value="Swim">Swim</option>
                <option value="Snowboard">Snowboard</option>
                <option value="Rock-Climb">Rock-Climb</option>
                <option value="Yoga">Yoga</option>
                <option value="Table-Tennis">Table-Tennis</option>
                <option value="Sauna">Sauna</option>
            </select>
        </p>
        <p>
            <label for="reps"> Reps</label>
            <input type="number" name="reps" required min="1" max="100">
        </p>
        <p>
            <label for="sets">Sets</label>
            <input type="number" name="sets" required min="1" max="10">
        </p>
        <p>
            <label for="time">Time</label>
            <input type="number" id="time" name="time" min="1">
        </p>
        <p>
            <label for="date">Date</label>
            <input type="date" name="date">
        </p>

        <p>
            <button type="submit">Add</button>
        </p>
    </form>


    <%- include('../partials/footer') %>

  